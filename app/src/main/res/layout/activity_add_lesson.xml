<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLesson">


    <RelativeLayout
        android:id="@+id/RL_a1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_CN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程:"
                android:textColor="#000000"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/className"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_CR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_CN"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教室:"
                android:textColor="#000000"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/classRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>
        <TextView
            android:id="@+id/classTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="上课时间:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@id/ll_CR"/>

        <LinearLayout
            android:id="@+id/fromTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classTime1"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Spinner
                android:id="@+id/weekday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/weekday"/>
            <EditText
                android:id="@+id/from"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="到"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <EditText
                android:id="@+id/to"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="节"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>

        </LinearLayout>




        <TextView
            android:id="@+id/classWeeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="上课周数:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@id/fromTo"/>
        <LinearLayout
            android:id="@+id/wl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classWeeks"
            android:paddingTop="5dp"
            android:gravity="center">
            <EditText
                android:id="@+id/wf"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="到"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="周"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/add"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@id/wl"
            android:paddingTop="5dp"
            android:background="#ffffff"/>






    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>